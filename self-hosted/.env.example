# Kodus MCP Manager - Self Hosted Configuration

# --- Application Settings ---
API_MCP_MANAGER_LOG_LEVEL='info'
API_MCP_MANAGER_PORT=3101
API_MCP_MANAGER_NODE_ENV=production
API_MCP_MANAGER_DATABASE_ENV=production

# Security
API_MCP_MANAGER_CORS_ORIGINS='*'
# CHANGE THIS! Generate a secure random string.
API_MCP_MANAGER_JWT_SECRET='change_me_to_a_secure_secret'
# CHANGE THIS! Used for encrypting sensitive data in DB.
API_MCP_MANAGER_ENCRYPTION_SECRET='change_me_to_a_secure_secret_key'

# --- Integrations ---
# Composio (Required if using Composio provider)
API_MCP_MANAGER_COMPOSIO_BASE_URL=https://backend.composio.dev/api/v3
API_MCP_MANAGER_COMPOSIO_API_KEY=
API_MCP_MANAGER_MCP_PROVIDERS=composio
# The URL where the user is redirected after OAuth success. Point this to your frontend or manager UI.
API_MCP_MANAGER_REDIRECT_URI=http://localhost:3101/setup/mcp/oauth

# --- Database Settings ---
# Configure your external database connection
# For Docker on Mac/Windows, use 'host.docker.internal' to reach host.
# For Linux, use host IP.
API_PG_DB_HOST=host.docker.internal
API_PG_DB_PORT=5432
API_PG_DB_USERNAME=your_db_user
API_PG_DB_PASSWORD=your_db_password
API_PG_DB_DATABASE=kodus_mcp_manager
API_MCP_MANAGER_PG_DB_SCHEMA=mcp-manager

# --- Documentation (Optional) ---
API_DOCS_ENABLED=false
